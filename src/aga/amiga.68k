	move.w	d0,(8,a3)   | fmode=3
	swap	d0
	move.w	d0,(a3)
	move.l	#0x55AA55AA,(16,a3)
	move.l	#0x55AA55AA,(24,a3)
	lea		((NB_LINES+1)*(_end_word_row_save-_control_word_row_save),a3),a4
	
	* end word
	clr.l	(a4)+
	clr.l	(a4)+
	clr.l	(a4)+
	clr.l	(a4)
	
	move.l	a3,d1
	lsl.w	#3,d2		| nb col * 8
	lea		title_sprites+2,a1
	move.w	d1,(4,a1,d2.w)
	swap	d1
	move.w	d1,(a1,d2.w)
	jra		100b


