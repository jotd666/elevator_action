title_copperlist:
title_bitplanes:
	DECL_BITPLANES	0,4
	* default color bank
	* all sprites have the same palette no need to specify odd or even
	* on color bank 1
	DECL_COLOR_BANK	1
title_sprite_colors:
	DECL_COLORS	0,32
title_sprites:
	DECL_SPRITES
	* back to color bank 0
	DECL_COLOR_BANK	0
title_colors:
	DECL_COLORS	0,TOTAL_NB_COLORS

    .word  0x100*120+1,0xFFFE	| mid screen wait
	*.word	 intreq,0x8014  | call copper interrupt in the middle of a frame, also flag so copper interrupt knows that we're going to call copper int

	* pal limit
    .word  0xFFDF,0xFFFE       | PAL wait

	.word	0x1001,0xFFFE
	.word	 intreq,0x8010	| no bobs from now on, get more drawing time

 	.word	beampos,0xFFFE
    .long    -2					
	.ascii	"ENDCPLST"

panel_tiles_colors:
	DECL_COLORS	0,TOTAL_NB_COLORS
	.word		0x800*3+1,0xFFFE		| wait 3 rows, then change palette



	* main copperlist
game_copperlist:
    *.word   0x1801,0xFFFE
	* reset scrolling to default (panel)

bobs_bitplanes:
	DECL_EVEN_BITPLANES	0,4
playfield_bitplanes:
	DECL_EVEN_BITPLANES	4,4
	* default color bank
	DECL_COLOR_BANK	0
playfield_tiles_colors:
	DECL_COLORS	16,TOTAL_NB_COLORS
bob_colors:
	DECL_COLORS	0,TOTAL_NB_COLORS

	* sprites color bank
	*DECL_COLOR_BANK	1
	
game_sprites:
	DECL_SPRITES
	* default color bank again
	*DECL_COLOR_BANK	0


	
	* now set color bank 1
	DECL_COLOR_BANK	1

intreq_block:
	* now wait some lines until we're sure bitmap only contains
	* non-black: we can set color 0 to light blue now
	.word	 intreq,0x8014  | call copper interrupt in the middle of a frame, also flag so copper interrupt knows that we're going to call copper int


	* then we should wait a bit, and set palette to tiles palette definitely
	* so scrolling letters have the proper colors TODO
	
	* pal limit
    .word  0xFFDF,0xFFFE       | PAL wait
post_pal_copper_rows:
	.set    beampos,0x0001
	.rept	0x15
	* room for 3 color registers to change dynamically each line
	.word	0x1FE,0
	.word	0x1FE,0
	.word	0x1FE,0
	.set    beampos,beampos+0x100
	.word	beampos,0xFFFE
	.endr
	.word	 intreq,0x8010	| no bobs from now on, get more drawing time
	.word	color,0
	
    *.word  0x1401,0xFFFE		| wait more lines to set to black (big holes!)
	
    *.word   0x1C01,0xFFFE
	
 	.word	beampos,0xFFFE
    .long    -2					
	.ascii	"ENDCPLST"

